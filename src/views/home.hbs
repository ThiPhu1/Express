    <div class="container my-4">
        <h1>Home Screen</h1>
        <form class="myForm">
            <div class="form-group">
                <label for="exampleInputEmail1">m column</label>
                <input type="number" class="form-control" name="m" id="inputM" aria-describedby="emailHelp" placeholder="Number of column">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">n row</label>
                <input type="number" class="form-control" name="n" id="inputN" placeholder="Number of row">
