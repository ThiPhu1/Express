            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <div class="mt-3">
        <p>Number of Column(s): {{inputM}} </p>
        <p>Number of Row(s): {{inputN}} </p>
        </div>

        {{{tableCreate inputM inputN}}}
        
    </div>